{
  "name": "next-providers",
  "private": true,
  "license": "UNLICENSED",
  "homepage": "https://github.com/easyops-cn/next-providers",
  "scripts": {
    "prepare": "lerna bootstrap",
    "start": "lerna run start",
    "build": "npm run build:libs && npm run build:bricks && npm run build:templates && npm run build:micro-apps",
    "build:libs": "if [ -d libs ]; then lerna run build --scope \"@next-libs/*\"; else echo \"no libs\"; fi",
    "build:bricks": "if [ -d bricks ]; then lerna run build --scope \"@next-bricks/*\"; else echo \"no bricks\"; fi",
    "build:templates": "if [ -d templates ]; then lerna run build --scope \"@next-legacy-templates/*\"; else echo \"no templates\"; fi",
    "build:micro-apps": "if [ -d micro-apps ]; then lerna run build --scope \"@next-micro-apps/*\"; else echo \"no micro-apps\"; fi",
    "postbuild": "npm run size-limit",
    "size-limit": "size-limit",
    "serve": "brick-container-serve",
    "test": "cross-env NODE_ENV='test' node --expose-gc ./node_modules/.bin/jest --logHeapUsage",
    "test:ci": "cross-env NODE_ENV='test' CI=true node --expose-gc ./node_modules/.bin/jest --logHeapUsage --ci",
    "yo": "brick-scripts",
    "yo-debug": "node --inspect-brk ./node_modules/@next-core/brick-scripts/dist/index.js",
    "renew": "dev-dependencies-renew",
    "extract": "dev-dependencies-extract"
  },
  "browserslist": {
    "development": ["extends @next-core/browserslist-config-next/development"],
    "production": ["extends @next-core/browserslist-config-next/production"]
  },
  "devDependencies": {
    "@ant-design/compatible": "^1.0.8",
    "@ant-design/icons": "^4.3.0",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@next-core/babel-runtime-helpers": "^1.0.3",
    "@next-core/brick-http": "^2.2.3",
    "@next-core/brick-icons": "^2.6.4",
    "@next-core/brick-kit": "^2.30.1",
    "@next-core/brick-types": "^2.15.1",
    "@next-core/brick-utils": "^2.10.3",
    "@next-core/dev-dependencies": "^1.2.21",
    "@next-core/easyops-analytics": "^0.1.3",
    "@next-core/fontawesome-library": "^1.1.11",
    "@next-core/illustrations": "^0.3.1",
    "@size-limit/file": "^4.9.1",
    "@types/classnames": "^2.2.11",
    "@types/d3": "^6.2.0",
    "@types/dompurify": "^2.2.1",
    "@types/echarts": "^4.9.3",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.167",
    "@types/lolex": "^5.1.0",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "@types/react-transition-group": "^4.4.0",
    "antd": "^4.10.2",
    "d3-drag": "^2.0.0",
    "d3-force": "^2.1.1",
    "d3-hierarchy": "^2.0.0",
    "d3-selection": "^2.0.0",
    "d3-shape": "^2.0.0",
    "d3-zoom": "^2.0.0",
    "echarts": "^4.9.0",
    "enzyme": "^3.11.0",
    "history": "^4.10.1",
    "i18next": "^19.8.4",
    "js-yaml": "^3.14.1",
    "lodash": "^4.17.20",
    "lolex": "^5.1.2",
    "moment": "^2.29.1",
    "react": "^16.14.0",
    "react-ace": "^7.0.5",
    "react-dom": "^16.14.0",
    "react-i18next": "^11.8.5",
    "react-transition-group": "^4.4.1"
  },
  "workspaces": ["bricks/*", "libs/*", "micro-apps/*", "templates/*"],
  "resolutions": {
    "@types/react": "^16.9.56",
    "lodash": "^4.17.20",
    "@next-core/brick-types": "^2.15.1"
  },
  "easyops": { "create-next-repo": "1.2.24", "dev-dependencies": "1.2.21" }
}
